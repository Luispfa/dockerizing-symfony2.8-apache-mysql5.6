<div class="container">
    <div class="row" id="main_row">

        <div class="span4" id="left_div">

            <div class="widget widget-form" id="left_top_div">

                <div class="widget-header">
                    <h3>
                        <i class="icon-bar-chart"></i>
                        Mails
                    </h3>

                    <div class="widget-actions">
                        <a class="btn btn-small accordion-toggle" onclick="loadYaml('myModal-tag', '{{ path( '_mailsplatform_yaml_content', {'platform_id' : platform.id}) }}', '', 'edit');
                                return false;">
                            <i class="icon-plus"></i> Add Tag
                        </a>
                        <a class="btn btn-small accordion-toggle" onclick="AddParam('{{ path('_mailplatform_add_Mail', {'platform_id' : platform.id} ) }}', $('#form_mail :input'), 'mailcontent', '{{ path( '_mailplatform_edit_all_mail', {'platform_id' : platform.id}) }}', 'content');
                                return false;">
                            <i class="icon-envelope"></i> Add Mail
                        </a>
                    </div> <!-- /.widget-actions -->
                </div> <!-- /.widget-header -->


                <div class="widget-content">
                    <form id="form_mail" class="form-horizontal">
                        <fieldset>
                            <div class="control-group">
                                <label class="control-label" for="clase">Clase</label>
                                <div class="controls">
                                    {{ form_widget(form_mail.clase.clase, { 'attr': {'class': 'input-medium'}}) }}
                                    <p class="help-block"></p>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="action">Action</label>
                                <div class="controls">
                                    {{ form_widget(form_mail.action.action, { 'attr': {'class': 'input-medium'}}) }}
                                    <p class="help-block"></p>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="to">to</label>
                                <div class="controls">
                                    {{ form_widget(form_mail.to.To, { 'attr': {'class': 'input-medium'}}) }}
                                    <p class="help-block">Escoja uno o varios detinatarios</p>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="subject">subject</label>
                                <div class="controls">
                                    {{ form_widget(form_mail.subject.Subject, { 'attr': {'class': 'input-medium'}}) }}
                                    <p class="help-block"></p>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="translatetag">translatetag</label>
                                <div class="controls">
                                    {{ form_widget(form_mail.translatetag.TranslateTag, { 'attr': {'class': 'input-medium'}}) }}
                                     
                                    <p class="help-block"><button type="button" class="btn btn-info"  onclick="loadYaml('myModal-tag', '{{ path( '_mailsplatform_yaml_content', {'platform_id' : platform.id}) }}', $('#form_TranslateTag').val(), 'view');
                                                return false;">Ver Tag</button>
                                    <button type="button" class="btn btn-primary"  onclick="loadYaml('myModal-tag', '{{ path( '_mailsplatform_yaml_content', {'platform_id' : platform.id}) }}', $('#form_TranslateTag').val(), 'edit');
                                                return false;">Edit Tag</button>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="template">template</label>
                                <div class="controls">
                                    {{ form_widget(form_mail.template.Template, { 'attr': {'class': 'input-medium'}}) }}
                                    <p class="help-block"></p>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="hide">hide</label>
                                <div class="controls">
                                    {{ form_widget(form_mail.hide.Hide, { 'attr': {'class': 'input-small'}}) }}
                                    <p class="help-block"></p>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="activate">activate</label>
                                <div class="controls">
                                    {{ form_widget(form_mail.activate.Activate, { 'attr': {'class': 'input-medium'}}) }}
                                    <p class="help-block"></p>
                                </div>
                            </div>
                        </fieldset>
                    </form>	
                </div>

            </div>


        </div> <!-- /.span4 -->

        <div class="span8" id="main_div">

            <div class="widget widget-table" id="main_down_div">

                <div class="widget-header">

                    <h3>
                        <i class="icon-bar-chart"></i>
                        Mails

                    </h3>
                </div>

                <div class="widget-content">

                    <table id="crontab_file" class="table table-striped table-bordered responsive">
                        <thead>
                            <tr>
                                <th>Clase</th>
                                <th>Action</th>
                                <th>To</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>

                        <tbody>
                            {% for mail in mails %}
                                <tr class ="gradeA">
                                    <td>
                                        {{ mail.clase }}
                                    </td>
                                    <td>
                                        {{ mail.action }}
                                    </td>
                                    <td>
                                         {{ form_widget(mail.to.to, { 'attr': {'readonly' : 'true' }}) }}
                                    </td>
                                    <td>
                                        <button class="btn btn-primary" type="button" onclick="LoadContent('{{ path( '_mailplatform_editmail', {'platform_id' : platform.id, 'id': mail.ide}) }}', 'content');
                                                return false;">Edit Mail</button>
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-danger" onclick="removeParameter('{{mail.id}}', '{{ path( '_mailsplatform_remove_mail_content', {'id':1}) }}', '{{ path( '_mailplatform_editmail', {'platform_id' : platform.id, 'id': 1}) }}', 'content');
                                                return false;">Delete</button>
                                    </td>
                                </tr>
                            {% endfor%}
                        </tbody>

                    </table>

                </div> <!-- /.widget-content -->

            </div> <!-- /.widget -->


        </div> <!-- /.span8 -->

    </div> <!-- /.row -->
</div>

<div class="modal fade hide modal-lg" id="myModal-tag">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h3>Texto del Tag</h3>
    </div>
    <div class="widget-tabs">
        <ul class="nav nav-tabs">
            {% for key,lang in langs %}
                {% if loop.first %}
                    <li class="active"><a href="#{{ lang.code }}">{{ lang.name }}</a></li>
                {% else %}
                    <li><a href="#{{ lang.code }}">{{ lang.name }}</a></li>
                {% endif %}
            {% endfor %}
        </ul>
    </div> <!-- /.widget-tabs -->
    
    <div class="modal-body">
        <input id="tag" type="text"/>
        <div class="tab-content">
            {% for key,lang in langs %}
                <div class="tab-pane active" id="{{ lang.code }}">
                    <div class="tab-content">
                        <p id="tag-text-{{ lang.code }}"></p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">Close</a>
        <button id="button-save" type="button" data-dismiss="modal" class="btn btn-primary" onclick="editYaml('{{ path( '_mailsplatform_edit_content_mail', {'platform_id':platform.id}) }}', $('#tag').val(), $( '[id*=\'form-tag\']' ), '{{ path( '_mailplatform_edit_all_mail', {'platform_id' : platform.id}) }}', 'content');">Save changes</button>
    </div>
</div>

