<div class="container">
    <div class="row" id="main_row">

        <div class="span4" id="left_div">

            <div class="widget widget-form" id="left_top_div">

                <div class="widget-header">
                    <h3>
                        <i class="icon-bar-chart"></i>
                        Parametro
                    </h3>

                    <div class="widget-actions">
                        <a class="btn btn-small accordion-toggle" onclick="AddParam('{{ path('_configplatform_add_parameter', {'platform_id' : platform.id} ) }}',$('#form_parameters_default_states :input'), 'default_state','{{ path( '_configplatform_edit_parameters_defaultstates', {'platform_id' : platform.id}) }}','content'); return false;">
                            <i class="icon-plus"></i> Add Parameter
                        </a>
                    </div> <!-- /.widget-actions -->
                </div> <!-- /.widget-header -->


                <div class="widget-content">
                    <form id="form_parameters_default_states" class="form-horizontal">
                        <fieldset>
                            <div class="control-group">
                                <label class="control-label" for="form_clase">Clase</label>
                                <div class="controls">
                                    {{ form_widget(form_default_state.clase.clase, { 'attr': {'class': 'input-medium'}}) }}
                                    <p class="help-block">Clase de objeto</p>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="form_defaultstate">Default State</label>
                                <div class="controls">
                                   {{ form_widget(form_default_state.default_state.defaultstate, { 'attr': {'class': 'input-medium'}}) }}
                                    <p class="help-block">Estado por defecto</p>
                                </div>
                            </div>
                        </fieldset>
                    </form>	
                </div>

            </div>


        </div> <!-- /.span4 -->

        <div class="span8" id="main_div">

            <div class="widget widget-table" id="main_down_div">

                <div class="widget-header">

                    <h3>
                        <i class="icon-bar-chart"></i>
                        Parameters Default States

                    </h3>
                </div>

                <div class="widget-content">

                    <table id="crontab_file" class="table table-striped table-bordered responsive">
                        <thead>
                            <tr>
                                <th>Clase</th>
                                <th>Default State</th>
                                <th>Delete</th>
                            </tr>
                        </thead>

                        <tbody>
                            {% for parameter_default_state in parameters_default_states %}
                                <tr class ="gradeA">
                                    <td>
                                        {{ parameter_default_state.clase }}
                                    </td>
                                    <td>
                                        {{ parameter_default_state.default_state }}
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-danger" onclick="removeParameter('{{parameter_default_state.param_id}}','{{ path( '_configplatform_remove_parameter') }}','{{ path( '_configplatform_edit_parameters_defaultstates', {'platform_id' : platform.id}) }}','content');return false;">Delete</button>
                                    </td>
                                </tr>
                            {% endfor%}
                        </tbody>

                    </table>

                </div> <!-- /.widget-content -->

            </div> <!-- /.widget -->


        </div> <!-- /.span8 -->

    </div> <!-- /.row -->
</div>