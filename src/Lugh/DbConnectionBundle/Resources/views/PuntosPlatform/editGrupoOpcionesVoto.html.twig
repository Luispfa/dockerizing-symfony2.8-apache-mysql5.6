<div class="container">
    <div class="row" id="main_row">

        <div class="span4" id="left_div">

            <div class="widget widget-form" id="left_top_div">

                <div class="widget-header">
                    <h3>
                        <i class="icon-bar-chart"></i>
                        Grupo Opciones Voto
                    </h3>

                    <div class="widget-actions">
                        <a class="btn btn-small accordion-toggle" onclick="AddParam('{{ path('_puntosplatform_add_punto', {'platform_id' : platform.id} ) }}', $('#form_opcionesVoto :input'), 'grupoopcionvoto', '{{ path( '_puntosplatform_edit_grupoopcionesvoto', {'platform_id' : platform.id}) }}', 'content');
                                return false;">
                            <i class="icon-plus"></i> Add Grupo Opcion Voto
                        </a>
                    </div> <!-- /.widget-actions -->
                </div> <!-- /.widget-header -->


                <div class="widget-content">
                    <form id="form_opcionesVoto" class="form-horizontal">
                        <fieldset>
                            <div class="control-group">
                                <label class="control-label" for="name">Tag</label>
                                <div class="controls">
                                    {{ form_widget(form_opcionesVoto.name.name, { 'attr': {'class': 'input-medium'}}) }}
                                    <p class="help-block">Nombre del grupo de opciones voto</p>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="opcionesvoto">Opciones Voto</label>
                                <div class="controls">
                                    {{ form_widget(form_opcionesVoto.opcionesvoto.opcionesvoto, { 'attr': {'class': 'input-medium'}}) }}
                                    <p class="help-block"></p>
                                </div>
                            </div>
                        </fieldset>
                    </form>	
                </div>

            </div>


        </div> <!-- /.span4 -->

        <div class="span8" id="main_div">

            <div class="widget widget-table" id="main_down_div">

                <div class="widget-header">

                    <h3>
                        <i class="icon-bar-chart"></i>
                        Grupo Opciones de Voto

                    </h3>
                </div>

                <div class="widget-content">

                    <table id="crontab_file" class="table table-striped table-bordered responsive">
                        <thead>
                            <tr>
                                <th>Tag</th>
                                <th>Opciones Voto</th>
                                <th>Delete</th>
                            </tr>
                        </thead>

                        <tbody>
                            {% for opcionVoto_line in opcionesVoto_line %}
                                <tr class ="gradeA">
                                    <td>
                                        {{ opcionVoto_line.name }}
                                    </td>
                                    <td>
                                        {{ opcionVoto_line.opcionesvoto }}
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-danger" onclick="removeParameter('{{opcionVoto_line.id}}', '{{ path( '_puntosplatform_remove_punto', {'table':'GrupoOpcionesVoto'}) }}', '{{ path( '_puntosplatform_edit_grupoopcionesvoto', {'platform_id' : platform.id}) }}', 'content');
                                                return false;">Delete</button>
                                    </td>
                                </tr>
                            {% endfor%}
                        </tbody>

                    </table>

                </div> <!-- /.widget-content -->

            </div> <!-- /.widget -->


        </div> <!-- /.span8 -->

    </div> <!-- /.row -->
</div> 