{% verbatim %}
<div>
    <div class="modal-header">
        <h3 data-i18n="Help" ng-if="title === undefined"></h3>
        <h3                  ng-if="title !== undefined">{{title}}</h3>

    </div>
    <div class="modal-body">
        {{ body }}
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" ng-if="cancel !== undefined" ng-click="cancel()">Cancel</button>
        <button class="btn btn-primary" ng-click="ok()">OK</button>
    </div>
</div>
{%endverbatim%}