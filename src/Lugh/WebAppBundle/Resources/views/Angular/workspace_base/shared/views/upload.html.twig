{% verbatim %}
    <div>
        <div class="form-group">
            <div class="col-sm-3 control-label">
                <label i18n="{{description}}"></label>
                <span required-label="{{label}}"></span>
            </div>

            <div class="col-sm-5">
                <input nv-file-select type="file" multiple class="btn-primary" data-ui-file-upload uploader="uploader" id="{{title}}" />
            </div>

            <div class="col-sm-4">
                <p class="small" i18n="{{instructions}}"></p>
            </div>
        </div>


        <div class="col-sm-9 col-sm-offset-3" ng-if="uploader.queue.length > 0 || (uploader.additionalDocuments !== undefined && uploader.additionalDocuments.length > 0)">

            <!--<h3>Upload queue</h3>
            <p>Queue length: {{ uploader.queue.length + (uploader.additionalDocuments !== undefined && uploader.additionalDocuments.length) }}</p>
            -->
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th width="50%" i18n="plugin:upload:name">Name</th>
                            <th ng-show="uploader.isHTML5" i18n="plugin:upload:progress">Progress</th>
                            <th i18n="plugin:upload:status">Status</th>
                            <th i18n="plugin:upload:actions">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in uploader.queue">
                            <td><strong>
                                    <a ng-click="uploader.downloadFile(item,isPublic)" ng-if="!$parent.isPublic">{{ item.file.name}}</a>
                                    <span ng-if="$parent.isPublic">{{ item.file.name}}</span>
                                </strong></td>
                            <td ng-show="uploader.isHTML5">
                                <div class="progress" style="margin-bottom: 0;">
                                    <div class="progress-bar" role="progressbar" ng-style="{ 'width': item.progress + '%' }"></div>
                                </div>
                            </td>
                            <td class="text-center">
                                <span ng-show="item.isSuccess"><i class="glyphicon glyphicon-ok"></i></span>
                                <span ng-show="item.isCancel"><i class="glyphicon glyphicon-ban-circle"></i></span>
                                <span ng-show="item.isError"><i class="glyphicon glyphicon-remove"></i></span>
                            </td>
                            <td nowrap>
                                <button type="button" class="btn btn-danger btn-xs" ng-click="uploader.removeFile(item)">
                                    <span class="glyphicon glyphicon-trash"></span> Remove
                                </button>
                            </td>
                        </tr>
                        <tr ng-repeat="item in uploader.additionalDocuments">
                            <td><strong>
                                    <a ng-click="uploader.downloadFile(item,isPublic)" ng-if="!$parent.isPublic">{{ item.nombre_externo}}</a>
                                    <span ng-if="$parent.isPublic">{{ item.nombre_externo}}</span>
                                </strong></td>
                            <td ng-show="uploader.isHTML5">
                                <div class="progress" style="margin-bottom: 0;">
                                    <div class="progress-bar" role="progressbar" ng-style="{ 'width': 100 + '%' }"></div>
                                </div>
                            </td>
                            <td class="text-center">
                                <span><i class="glyphicon glyphicon-ok"></i></span>
                            </td>
                            <td nowrap>
                                <button type="button" class="btn btn-danger btn-xs" ng-click="uploader.removeFile(item,$index)">
                                    <span class="glyphicon glyphicon-trash"></span> Remove
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <hr>
        </div>
    </div>
{%endverbatim%}