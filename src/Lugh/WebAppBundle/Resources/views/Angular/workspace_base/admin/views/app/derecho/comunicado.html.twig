{% verbatim %} 
<div class="page" ng-controller="communiqueCtrl">

    <section class="panel panel-default">
        <div class="panel-heading"><strong><span class="glyphicon glyphicon-th"></span> Comunicado</strong></div>
        <div class="panel-body">


            <form class="form-horizontal" role="form">


                <fieldset class="titulo-item">
                    <legend>Comunicado</legend>

                    <div class="form-group">
                        <label for="subject" class="col-sm-3 control-label">Título</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control" id="subject" placeholder="Título" entities-decode ng-model="communique.subject">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Cuerpo</label>
                        <!-- Editor -->
                        <section class="panel panel-default">
                            <div class="panel-body">
                                <div text-angular ng-model="communique.body" entities-decode class="ui-editor"></div>
                            </div>
                        </section>
                        <!-- end Editor -->
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Publicar</label>
                        <input name="locked" type="checkbox" data-ng-model="communique.enabled" ng-true-value="true" ng-false-value="false">
                    </div>
                    <div class="form-group">
                        <upload-document 
                            title="Documentos" 
                            isolatedtoken
                            uploaderid="{{uploaderID}}" 
                        />
                    </div>
                </fieldset>

                <fieldset>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9">
                            <button type="submit" class="btn btn-success" ng-disabled="!isValid()" ng-click="submit(communique)">Guardar</button> <button type="submit" class="btn btn-success" ng-click="clear()">Limpiar datos</button>
                        </div>
                    </div>
                </fieldset>



            </form> 

        </div>
    </section>


</div>
{% endverbatim %} 


