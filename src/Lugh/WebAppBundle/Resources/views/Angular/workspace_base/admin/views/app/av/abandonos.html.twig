{%verbatim%}
    <div class="page page-table" data-ng-controller="usersAvCtrl">

        <section class="panel panel-default table-dynamic">
            <div class="panel-heading"><strong><span class="glyphicon glyphicon-th"></span> <span data-i18n="Abandonos">Abandonos</span></strong></div>

            <div class="table-filters">
                <div class="row">

                    <div class="col-sm-6 col-xs-6">
                        <button class="btn btn-success" ng-click="excel()">Excel</button>
                        <button class="btn btn-success" ng-click="total()">Texto: Todos</button>
                        <button class="btn btn-success" ng-click="last()">Texto: Últimos</button>
                    </div>
                    
                    <div class="col-sm-3 col-xs-6">
                        <!--<span class="ui-select">
                            <select ng-model="filterState"
                                    ng-options="state as label for (state,label) in states"
                                    ng-change="filterByState()">
                            </select>
                        </span>-->             
                    </div>

                    <div class="col-sm-3 col-xs-6">
                        <form>
                            <input type="text"
                                   placeholder="search"
                                   class="form-control"
                                   data-ng-model="searchKeywords"
                                   data-ng-keyup="search()">
                        </form>
                    </div>
                    <div class="col-sm-3 col-xs-6 filter-result-info">
                        <span>
                            Showing {{filteredStores.length}}/{{stores.length}} entries
                        </span>              
                    </div>
                </div>
            </div>

            <div class="table-responsive table-bordered">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                    <div class="th">
                        Nombre
                        <span class="glyphicon glyphicon-chevron-up"
                              data-ng-click=" order('autor.name')"
                              data-ng-class="{active: row == 'autor.name'}"></span>
                        <span class="glyphicon glyphicon-chevron-down"
                              data-ng-click=" order('-autor.name')"
                              data-ng-class="{active: row == '-autor.name'}"></span>
                    </div>
                    </th>
                    <th>
                    <div class="th">
                        N. Acciones
                        <span class="glyphicon glyphicon-chevron-up"
                              data-ng-click=" order('autor.shares_num')"
                              data-ng-class="{active: row == 'autor.shares_num'}"></span>
                        <span class="glyphicon glyphicon-chevron-down"
                              data-ng-click=" order('-autor.shares_num')"
                              data-ng-class="{active: row == '-autor.shares_num'}"></span>
                    </div>
                    </th>
                    <th><div class="th">
						Documento
						<span class="glyphicon glyphicon-chevron-up"
							  data-ng-click=" order('autor.document_num')"
							  data-ng-class="{active: row == 'autor.document_num'}"></span>
						<span class="glyphicon glyphicon-chevron-down"
							  data-ng-click=" order('-autor.document_num')"
							  data-ng-class="{active: row == '-autor.document_num'}"></span>
					</div></th>
                    <th>
                    <div class="th">
                        Fecha salida
                        <span class="glyphicon glyphicon-chevron-up"
                              data-ng-click=" order('date_time')"
                              data-ng-class="{active: row == 'date_time'}"></span>
                        <span class="glyphicon glyphicon-chevron-down"
                              data-ng-click=" order('-date_time')"
                              data-ng-class="{active: row == '-date_time'}"></span>
                    </div>
                    </th>
                    </tr>
                    </thead>
                    <tbody>
                        <tr data-ng-repeat="store in currentPageStores" 
                            ng-click="loadUserProfile(store.autor.id)">
                            <td ng-bind-html="store.autor.name"></td>
                            <td>{{store.autor.shares_num | formattedNumber}}</td>
                            <td>{{store.autor.document_num}}</td>
                            <td>{{store.date_time | date: 'dd/MM/yyyy&nbsp;HH:mm' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>



            <footer class="table-footer">
                <div class="row">
                    <div class="col-md-6 page-num-info">
                        <span>
                            Mostrar 
                            <select data-ng-model="numPerPage"
                                    data-ng-options="num for num in numPerPageOpt"
                                    data-ng-change="onNumPerPageChange()">
                            </select> 
                            entradas por página
                        </span>
                    </div>
                    <div class="col-md-6 text-right pagination-container">
                        <pagination class="pagination-sm"
                                    page="currentPage"
                                    total-items="filteredStores.length"
                                    max-size="4"
                                    on-select-page="select(page)"
                                    items-per-page="numPerPage"
                                    rotate="false"
                                    boundary-links="true"></pagination>
                    </div>
                </div>
            </footer>
        </section>

    </div>
{%endverbatim%}