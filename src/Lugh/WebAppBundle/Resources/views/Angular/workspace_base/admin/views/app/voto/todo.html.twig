{% verbatim %} 
<div class="page page-table" data-ng-controller="accionesCtrl">

	<section class="panel panel-default table-dynamic">
		<div class="panel-heading"><strong><i class="fa fa-check-square-o"></i>Todo</strong></div>

		<div class="table-filters">
			<div class="row">

				<div class="col-sm-6 col-xs-12">
					<button class="btn btn-success" ng-click="excel()">Generar documento excel</button>
					<!--<span class="ui-select">
						<select>
							<option>Todas</option>
							<option>Tareas pendientes</option>
							<option>Propuestas</option>
							<option>Iniciativas</option>
							<option>Ofertas de representaci칩n</option>
							<option>Peticiones de representaci칩n</option>
						</select>
					</span>-->             
				</div>

				<div class="col-sm-3 col-xs-6">
					<form>
						<!--<input type="text"
							   placeholder="search"
							   class="form-control"
							   data-ng-model="searchKeywords"
							   data-ng-keyup="search()">-->
						<input type="text" 
                               class="form-control"
                               datepicker-popup="{{format}}"
                               ng-model="dt"
                               is-open="opened"
                               datepicker-options="dateOptions" 
                               date-disabled="disabled(date, mode)"
                               close-text="Cerrar"
                               current-text="Hoy"
                               clear-text="Limpiar"
                               toggle-weeks-text="Semanas"
                               ng-change="filterDate()">
					</form>
				</div>
				<div class="col-sm-3 col-xs-6 filter-result-info">
					<span>
						Showing {{filteredStores.length}}/{{stores.length}} entries
					</span>
				</div>
			</div>
		</div>

		<div class="table-responsive table-bordered" id="excelData">
			<table class="table table-striped table-bordered">
				<thead>
					<tr>
						<th><div class="th">
					Nombre
					<span class="glyphicon glyphicon-chevron-up"
						  data-ng-click=" order('accionista.name')"
						  data-ng-class="{active: row == 'accionista.name'}"></span>
					<span class="glyphicon glyphicon-chevron-down"
						  data-ng-click=" order('-accionista.name')"
						  data-ng-class="{active: row == '-accionista.name'}"></span>
				</div></th>
				<th><div class="th">
					Documento
					<span class="glyphicon glyphicon-chevron-up"
						  data-ng-click=" order('accionista.document_num')"
						  data-ng-class="{active: row == 'accionista.document_num'}"></span>
					<span class="glyphicon glyphicon-chevron-down"
						  data-ng-click=" order('-accionista.document_num')"
						  data-ng-class="{active: row == '-accionista.document_num'}"></span>
				</div></th>
				<th><div class="th">
					Acciones
					<span class="glyphicon glyphicon-chevron-up"
						  data-ng-click=" order('accionista.shares_num')"
						  data-ng-class="{active: row == 'accionista.shares_num'}"></span>
					<span class="glyphicon glyphicon-chevron-down"
						  data-ng-click=" order('-accionista.shares_num')"
						  data-ng-class="{active: row == '-accionista.shares_num'}"></span>
				</div></th>
				<th><div class="th">
					Acci칩n
					<span class="glyphicon glyphicon-chevron-up"
						  data-ng-click=" order('discr')"
						  data-ng-class="{active: row == 'discr'}"></span>
					<span class="glyphicon glyphicon-chevron-down"
						  data-ng-click=" order('-discr')"
						  data-ng-class="{active: row == '-discr'}"></span>
				</div></th>
				<th><div class="th">
					Fecha
					<span class="glyphicon glyphicon-chevron-up"
						  data-ng-click=" order('date_time')"
						  data-ng-class="{active: row == 'date_time'}"></span>
					<span class="glyphicon glyphicon-chevron-down"
						  data-ng-click=" order('-date_time')"
						  data-ng-class="{active: row == '-date_time'}"></span>
				</div></th>
				</tr>
				</thead>
				<tbody>
					<tr ng-if="currentPageStores.length === 0">
						<td>No hay datos disponibles.</td>
						<td></td>
						<td></td>
						<td></td>
						<td></td>
					</tr>
					<tr data-ng-repeat="store in currentPageStores" ng-click="loadAccion(store.id)">
						<td>{{store.accionista.name}}</td>
						<td>{{store.accionista.document_num}}</td>
						<td ng-bind-html="store.accionista.shares_num | formattedNumber"></td>
						<td ng-bind-html="type[store.discr]"></td>
						<td>{{store.date_time | date: 'dd/MM/yyyy&nbsp;HH:mm'}}</td>
					</tr>
				</tbody>
			</table>
		</div>



		<footer class="table-footer">
			<div class="row">
				<div class="col-md-6 page-num-info">
					<span>
						Mostrar 
						<select data-ng-model="numPerPage"
								data-ng-options="num for num in numPerPageOpt"
								data-ng-change="onNumPerPageChange()">
						</select> 
						entradas por p치gina
					</span>
				</div>
				<div class="col-md-6 text-right pagination-container">
					<pagination class="pagination-sm"
								page="currentPage"
								total-items="filteredStores.length"
								max-size="4"
								on-select-page="select(page)"
								items-per-page="numPerPage"
								rotate="false"
								boundary-links="true"></pagination>
				</div>
			</div>
		</footer>
	</section>

</div>
{% endverbatim %}