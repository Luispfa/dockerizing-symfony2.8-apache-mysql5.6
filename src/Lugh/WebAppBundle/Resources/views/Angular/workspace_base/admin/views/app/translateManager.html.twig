{%verbatim%}
    <div class="page" ng-controller="translationCtrl">
        <!-- Diálogo de edición de tag -->
        <section class="panel panel-default">
            <div class="panel-heading"><strong><span class="glyphicon glyphicon-th"></span> Editar tag</strong></div>
            <div class="panel-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <div class="col-sm-6">
                            <label for="editTag.tag">Tag</label>
                            <input type="text" class="form-control" data-ng-model="editTag.tag">
                        </div>
                    </div>
                    <div class="form-group" adaptive-row>
                        <div ng-repeat="(lang,language) in languages">
                            <label>{{language}}</label>
                            <textarea type="text" class="form-control" data-ng-model="editTag[lang]"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6 col-xs-12">
                            <button type="submit" ng-click="submitTag(editTag)" class="btn btn-w-md btn-gap-v btn-success col-md-3 col-xs-12">Guardar</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>

        <!-- Tabla de tags -->
        <section class="panel panel-default table-dynamic" >
            <div class="panel-heading"><strong><span class="glyphicon glyphicon-th"></span> Traducciones</strong></div>

            <div class="table-filters">
                <div class="row">
                    <div class="col-sm-10">
                        <form class="form-horizontal">
                            <!-- Filtrar por idioma -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <select class="form-control"
                                            data-ng-model="languageFilter"
                                            ng-options="lang as language for (lang,language) in languages">
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <!-- Filtro de búsqueda -->
                                <div class="form-group">
                                    <input type="text"
                                           placeholder="search"
                                           class="form-control"
                                           data-ng-model="searchKeywords"
                                           data-ng-keyup="search()">
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-sm-2 filter-result-info">
                        <div class="form-group text-center">
                            Showing {{filteredStores.length}}/{{stores.length}} entries
                        </div>
                    </div>
                </div>
            </div>

            <div class="table-responsive table-bordered">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th><div class="th">
                        Tag
                        <span class="glyphicon glyphicon-chevron-up"
                              data-ng-click=" order('tag') "
                              data-ng-class="{active: row == 'tag'}"></span>
                        <span class="glyphicon glyphicon-chevron-down"
                              data-ng-click=" order('-tag') "
                              data-ng-class="{active: row == '-tag'}"></span>
                    </div></th>
                    <th ng-repeat="(lang,language) in languages" ng-hide="languageFilter !== lang">
                    <div class="th">
                        {{language}}
                        <span class="glyphicon glyphicon-chevron-up"
                              data-ng-click=" order(language) "
                              data-ng-class="{active: row == language}"></span>
                        <span class="glyphicon glyphicon-chevron-down"
                              data-ng-click=" order('-'+language) "
                              data-ng-class="{active: row == '-'+language}"></span>
                    </div></th>
                    </tr>
                    </thead>
                    <tbody>
                        <tr data-ng-repeat="row in currentPageStores"
                            ng-click="loadTagForEdition(row)">
                            <td>{{row.tag}}</td>
                            <td ng-repeat="(lang,language) in languages" ng-hide="languageFilter !== lang">{{row[lang]}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>



            <footer class="table-footer">
                <div class="row">
                    <div class="col-md-6 page-num-info">
                        <span>
                            Show 
                            <select data-ng-model="numPerPage"
                                    data-ng-options="num for num in numPerPageOpt"
                                    data-ng-change="onNumPerPageChange()">
                            </select> 
                            entries per page
                        </span>
                    </div>
                    <div class="col-md-6 text-right pagination-container">
                        <pagination class="pagination-sm"
                                    page="currentPage"
                                    total-items="filteredStores.length"
                                    max-size="4"
                                    on-select-page="select(page)"
                                    items-per-page="numPerPage"
                                    rotate="false"
                                    boundary-links="true"></pagination>
                    </div>
                </div>
            </footer>
        </section>
    </div>
{%endverbatim%}