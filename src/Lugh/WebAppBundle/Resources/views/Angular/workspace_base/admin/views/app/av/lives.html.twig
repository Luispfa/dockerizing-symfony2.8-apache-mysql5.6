{%verbatim%}
    <div class="page page-table" data-ng-controller="accionistasLivesTableCtrl">

        <section class="panel panel-default table-dynamic">
            <div class="panel-heading"><strong><span class="glyphicon glyphicon-th"></span> <span data-i18n="Eventos Accionistas">Eventos Accionistas</span></strong></div>

            <div class="table-filters">
                <div class="row">
                    
                    

                    <div class="col-sm-4 col-xs-6">
                        <form>
                            <input type="text"
                                   placeholder="search"
                                   class="form-control"
                                   data-ng-model="searchKeywords"
                                   data-ng-keyup="search()">
                        </form>
                    </div>
                    <div class="col-sm-8 col-xs-6 filter-result-info">
                        <span>
                            Showing {{filteredStores.length}}/{{stores.length}} entries
                        </span>              
                    </div>
                </div>
            </div>

            <div class="table-responsive table-bordered">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                    <div class="th">
                        Nombre
                        <span class="glyphicon glyphicon-chevron-up"
                              data-ng-click=" order('name')"
                              data-ng-class="{active: row == 'name'}"></span>
                        <span class="glyphicon glyphicon-chevron-down"
                              data-ng-click=" order('-name')"
                              data-ng-class="{active: row == '-name'}"></span>
                    </div>
                    </th>
                    <th>
                    <div class="th">
                        N. Acciones
                        <span class="glyphicon glyphicon-chevron-up"
                              data-ng-click=" order('user.shares_num')"
                              data-ng-class="{active: row == 'user.shares_num'}"></span>
                        <span class="glyphicon glyphicon-chevron-down"
                              data-ng-click=" order('-user.shares_num')"
                              data-ng-class="{active: row == '-user.shares_num'}"></span>
                    </div>
                    </th>
                    <th>
                    <div class="th">
                        Email
                        <span class="glyphicon glyphicon-chevron-up"
                              data-ng-click=" order('user.email')"
                              data-ng-class="{active: row == 'user.email'}"></span>
                        <span class="glyphicon glyphicon-chevron-down"
                              data-ng-click=" order('-user.email')"
                              data-ng-class="{active: row == '-user.email'}"></span>
                    </div>
                    </th>
                    <th>
                    <div class="th">
                        State
                        <span class="glyphicon glyphicon-chevron-up"
                              data-ng-click=" order('item_accionista.state')"
                              data-ng-class="{active: row == 'item_accionista.state'}"></span>
                        <span class="glyphicon glyphicon-chevron-down"
                              data-ng-click=" order('-item_accionista.state')"
                              data-ng-class="{active: row == '-item_accionista.state'}"></span>
                    </div>
                    </th>
                    </tr>
                    </thead>
                    <tbody>
                        <tr data-ng-repeat="store in currentPageStores" 
                            ng-click="loadUserLives(store.id)">
                            <td ng-bind-html="store.name"></td>
                            <td>{{store.shares_num | formattedNumber}}</td>
                            <td>{{store.user.email}}</td>
                            <td>{{getNameState(store.item_accionista.state)}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>



            <footer class="table-footer">
                <div class="row">
                    <div class="col-md-6 page-num-info">
                        <span>
                            Mostrar 
                            <select data-ng-model="numPerPage"
                                    data-ng-options="num for num in numPerPageOpt"
                                    data-ng-change="onNumPerPageChange()">
                            </select> 
                            entradas por p√°gina
                        </span>
                    </div>
                    <div class="col-md-6 text-right pagination-container">
                        <pagination class="pagination-sm"
                                    page="currentPage"
                                    total-items="filteredStores.length"
                                    max-size="4"
                                    on-select-page="select(page)"
                                    items-per-page="numPerPage"
                                    rotate="false"
                                    boundary-links="true"></pagination>
                    </div>
                </div>
            </footer>
        </section>

    </div>
{%endverbatim%}