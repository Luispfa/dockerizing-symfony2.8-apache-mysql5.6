                </ul>
            </div>-->
            <div class="mail-actions">
                <!--<a href="#/app/header/mail/compose" class="btn btn-sm btn-primary">Reply <i class="fa fa-mail-reply"></i></a>
                <a href="#/app/header/mail/compose" class="btn btn-sm btn-default">Forward <i class="fa fa-mail-forward"></i></a>-->
            </div>
        </div>
    </section>

{% endverbatim %}