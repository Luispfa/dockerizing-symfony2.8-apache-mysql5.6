{% verbatim %}
<div class="page" ng-controller="foroPublicOffers">

	<section class="panel panel-default">
		<div class="panel-heading"><strong><span class="glyphicon glyphicon-th"></span> <span i18n="id00078_app:foro:long:offers">Oferta de representación</span></strong></div>
		<div class="panel-body">


			<div class="table-responsive table-bordered">
				<table class="table table-striped table-bordered">
					<thead>
						<tr>
							<th class="col-sm-10" i18n="id00090_app:foro:description">Descripción proceso</th>
							<th class="col-sm-2" i18n="id00091_app:foro:date">Fecha</th>
						</tr>
					</thead>
					<tbody>
						<tr ng-if="items.emptyForo()">
							<td><a i18n="id00092_app:no-data">No hay datos disponibles.</a></td>
							<td></td>
						</tr>
						<tr ng-repeat="item in items.offers">
							<td><h4>{{item.autor.name}} - <a ng-click="loadItem(item)" ng-bind-html="item.title"></a></h4>
								<p ng-bind-html="item.description | nl2br" ></p>
							</td>
							<td>{{item.date_time | date: 'dd/MM/yyyy&nbsp;HH:mm'}}</td>
						</tr>
					</tbody>
				</table> 
			</div>

		</div>
	</section>

</div>
{% endverbatim %}