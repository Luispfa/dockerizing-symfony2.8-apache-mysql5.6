{% verbatim %}
    <div class="page" ng-controller="communiquesCtrl">

        <section class="panel panel-default">
            <div class="panel-heading"><strong><span class="glyphicon glyphicon-th"></span> <span i18n="id00135_app:derecho:communiques">Comunicados</span></strong></div>
            <div class="panel-body">


                <div class="table-responsive table-bordered">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="col-sm-10" i18n="id00090_app:foro:description">Descripci√≥n proceso</th>
                                <th class="col-sm-2"  i18n="id00091_app:foro:date">Fecha</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-if="communiques.length === 0">
                                <td><a i18n="id00092_app:no-data">No hay datos disponibles.</a></td>
                                <td></td>
                            </tr>
                            <tr ng-repeat="communique in communiques">
                                <td>
                                    <h4><a ng-click="goToDetails(communique)" ng-bind-html="communique.subject"></a></h4>
                                    <p ng-bind-html="communique.body | entitiesDecode"></p>
                                </td>
                                <td>{{communique.date_time | date: 'dd/MM/yyyy&nbsp;HH:mm'}}</td>
                            </tr>
                        </tbody>
                    </table> 
                </div>


            </div>
        </section>


    </div>



{% endverbatim %}