{% verbatim %}
    <div class="page" ng-controller="personalThreadsCtrl">

        <section class="panel panel-default">
            <div class="panel-heading"><strong><span class="glyphicon glyphicon-th"></span> <span i18n="id00153_app:derecho:own-threads">Solicitudes propias</span></strong></div>
            <div class="panel-body">


                <div class="table-responsive table-bordered">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="col-sm-10" i18n="id00090_app:foro:description">Descripci√≥n proceso</th>
                                <th class="col-sm-2"  i18n="id00091_app:foro:date">Fecha</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-if="items.length === 0">
                                <td i18n="id00092_app:no-data">No hay datos disponibles</td>
                                <td></td>
                            </tr>
                            <tr ng-repeat="item in items">
                                <td>
                                    <h4><a ng-click="goToThread(item)">{{item.subject | entitiesDecode}} - {{i18n(states[item.state])}}<span ng-if="item.locked == 1"> ({{i18n(states['locked'])}})</span></a></h4>
                                    <p ng-bind-html="item.body | nl2br"></p>
                                </td>
                                <td>{{item.date_time | date: 'dd/MM/yyyy&nbsp;HH:mm'}}</td>
                            </tr>
                        </tbody>
                    </table>  
                </div>


            </div>
        </section>


    </div>


{% endverbatim %}