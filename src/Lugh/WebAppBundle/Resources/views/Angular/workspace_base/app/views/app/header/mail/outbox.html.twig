    <section class="panel panel-default mail-container" data-ng-controller="MailsOutCtrl">
        <div class="panel-heading"><strong><span class="glyphicon glyphicon-th"></span> <span i18n="id00378_app:mail:outbox">Outbox</span></strong></div>
        <div class="mail-options">
            <label class="ui-checkbox"><input name="checkbox1" type="checkbox" value="option1" ><span i18n="id00377_app:mail:all">Marcar todo</span></label>
        </div>


        <table class="table table-hover">
            <tr class="mail-unread" ng-repeat="mail in mails_out" ng-click="loadMail(mail.id)">
                <td><label class="ui-checkbox"><input name="checkbox1" type="checkbox" value="option1" ><span></span></label></td>
                <td>{{mail.mailfrom}}</td>
                <td>{{mail.subject}}</td>
                <td> </td>
                <td>{{mail.date_time | date: "dd/MM/yyyy&nbsp;HH:mm:ss"}}</td>
                <td><i class="fa fa-star"></i></td>
            </tr>
