{% verbatim %}
<header class="clearfix" data-ng-controller="HeaderCtrl">

    <!-- Logo -->
    <div class="logo">
        <a href="#/">
            <!-- <span class="logo-icon glyphicon glyphicon-fire"></span> -->
            <span>{{ brand()}}</span>
        </a>
    </div>

    <!-- needs to be put after logo to make it working-->
    <div class="menu-button" toggle-off-canvas>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
    </div>

    <div class="top-nav">
        <ul class="nav-left list-unstyled">
            <li>
                <a href="#/" data-toggle-min-nav
                   class="toggle-min"
                   ><i class="fa fa-bars"></i></a>

                <!--             <li class="dropdown">
                                <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-columns"></i></a>
                                <ul class="dropdown-menu dropdown-dark with-arrow">
    
                                    <li> <a href="javascript:;"><span data-i18n="Boxed Layout"></span></a> </li>
                                    <li> <a href="javascript:;"><span data-i18n="Full Width Layout"></span></a> </li>
                                    <li> <a href="javascript:;"><span data-i18n="Collapsed Menu"></span></a> </li>
                                    <li> <a href="javascript:;"><span data-i18n="Horizontal Menu"></span></a> </li>
                                    <li> <a href="javascript:;"><span data-i18n="Vertical Menu"></span></a> </li>
                                </ul>
                            </li> -->


            <li class="dropdown text-normal nav-profile" >
                <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown">

                    <div class="img-login img-circle img30_30"></div>
                    <span id="texto-usuario-header" class="hidden-xs">{{i18n(username)}}</span>


                </a>
                <ul class="dropdown-menu dropdown-dark with-arrow">
                    <li>
                        <a href="#/app/profile">
                            <i class="fa fa-user"></i>
                            <span data-i18n="id00088_app:header:profile">My Profile</span>
                        </a>
                    </li>
                    <li ng-if="!is_user_cert">
                        <a href="#/app/resetPassword">
                            <i class="fa fa-asterisk"></i>
                            <span data-i18n="id00276_app:header:resetpass">Reset Password</span>
                        </a>
                    </li>
                    <li>

                        <a href="javascript:;" data-ng-click="doLogout()">
                            <i class="fa fa-sign-out"></i>
                            <span data-i18n="id00089_app:header:log-out">Log Out</span>
                        </a>
                    </li>
                </ul>
            </li>
            <li class="dropdown langs text-normal" data-ng-controller="LangCtrl">
                <a href="javascript:;" class="dropdown-toggle active-flag" data-toggle="dropdown">
                    <span> {{ getFlag()}}</span>
                </a>
                <ul class="dropdown-menu dropdown-dark with-arrow list-langs" role="menu">
                    <li lang-element="es" data-ng-show="lang !== 'Espanol' ">
                        <a href="javascript:;" data-ng-click="setLang('Espanol')" i18n="language_spanish"> Español</a></li>
                    <li lang-element="ca" data-ng-show="lang !== 'Catalan' ">
                        <a href="javascript:;" data-ng-click="setLang('Catalan')" i18n="language_catalan"> Català</a></li>
                    <li lang-element="gl" data-ng-show="lang !== 'Gallego' ">
                        <a href="javascript:;" data-ng-click="setLang('Gallego')" i18n= "language_gaelican"> Galego</a></li>
                    <li lang-element="en" data-ng-show="lang !== 'English' ">
                        <a href="javascript:;" data-ng-click="setLang('English')" i18n="language_english"> English</a></li>
                </ul>
            </li>


            <li class="dropdown text-normal visible-sm visible-xs hidden-md hidden-lg">
                <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown">
                    <span data-i18n="APP">APP</span>
                </a>
                <ul class="dropdown-menu dropdown-dark with-arrow">
                    <li app-element="foro">

                        <a href="#/app/foro/dashboard-foro">
                            <i class="fa fa-users"></i>
                            <span data-i18n="id00048_app:foro"> Foro</span>
                        </a>
                    </li>
                    <li app-element="voto">
                        <a href="#/app/voto/voto">
                            <i class="fa fa-check-square-o"></i>
                            <span data-i18n="id00049_app:voto"> Voto</span>
                        </a>
                    </li>
                    <li app-element="derecho">

                        <a href="#/app/derecho/dashboard-derecho">
                            <i class="fa fa-info"></i>
                            <span data-i18n="id00050_app:derecho"> Derecho</span>
                        </a>
                    </li>
                    <li app-element="av">

                        <a href="#/app/av/dashboard-av">
                            <i class="fa fa-info"></i>
                            <span data-i18n="id00428_app:av"> Asistencia Virtual</span>
                        </a>
                    </li>
                </ul>
            </li>

            <li class="menu-principal text-normal hidden-sm hidden-xs" app-element="foro">
                <a href="#/app/foro/dashboard-foro">                         
                    <i class="fa fa-users"></i> <span data-i18n="id00048_app:foro"> Foro</span>
                </a>
            </li>
            <li class="menu-principal text-normal hidden-sm hidden-xs" app-element="voto">
                <a href="#/app/voto/voto">
                    <i class="fa fa-check-square-o"></i> <span data-i18n="id00049_app:voto"> Voto</span>
                </a>
            </li>
            <li class="menu-principal text-normal hidden-sm hidden-xs" app-element="derecho">
                <a href="#/app/derecho/dashboard-derecho">
                    <i class="fa fa-info"></i> <span data-i18n="id00050_app:derecho"> Derecho</span>
                </a>
            </li>
            <li class="menu-principal text-normal hidden-sm hidden-xs" app-element="av">
                <a href="#/app/av/dashboard-av">
                    <i class="fa fa-laptop"></i> <span data-i18n="id00428_app:av"> Asistencia Virtual</span>
                </a>
            </li>


            <!--             <li class="dropdown">
                            <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown">
                                <span class="fa fa-magic nav-icon"></span>
                            </a>
                            <ul class="dropdown-menu pull-right color-switch" data-ui-color-switch>
                                <li><a href="javascript:;" class="color-option color-some_color" data-style="some_color"></a></li>
                            </ul>
                        </li> -->

        </ul> 

        <ul class="nav-right pull-right list-unstyled">

            <li class="dropdown" data-ng-controller="NotificationsCtrl">
                <a href="javascript:;" class="dropdown-toggle bg-primary" data-toggle="dropdown">
                    <i class="fa fa-comment-o"></i>
                    <span class="badge badge-info" data-ng-hide="notNotifications()">{{numNotifications.length}}</span>
                </a>
                <div class="dropdown-menu pull-right with-arrow panel panel-default">
                    <div class="panel-heading" data-i18n="id00160_app:header:notifications">
                        Notificaciones
                    </div>
                    <ul class="list-group">
                        <li class="list-group-item" ng-repeat="notification in numNotifications | limitTo:3">
                            <a href="#/app/header/notificaciones" class="media">
                                <span class="pull-left media-icon">
                                    <span class="square-icon sm bg-primary"><i class="fa fa-comment-o"></i></span>
                                </span>
                                <div class="media-body">
                                    <span class="block" ng-bind-html="notification.subject"></span>
                                    <span class="text-muted">{{notification.date_time | date: "dd/MM/yyyy&nbsp;HH:mm"}}</span>
                                </div>
                            </a>
                        </li>                     
                    </ul>
                    <div class="panel-footer">
                        <a href="#/app/header/notificaciones" data-i18n="id00077_app:header:notifications:show-all">Mostrar todas las notificaciones</a>
                    </div>
                </div>
            </li>

            <li class="dropdown" data-ng-controller="MailsCtrl">
                <a href="javascript:;" class="dropdown-toggle bg-primary" data-toggle="dropdown">
                    <i class="fa fa-envelope-o"></i>
                    <span class="badge badge-info" data-ng-hide="notMails()">{{mails_in.length}}</span>
                </a>
                <div class="dropdown-menu pull-right with-arrow panel panel-default">
                    <div class="panel-heading" data-i18n="id00161_app:header:mails">
                        Mails
                    </div>
                    <ul class="list-group">
                        <li class="list-group-item" ng-repeat="mail in mails_in | limitTo:3">
                            <a href="javascript:;" ng-click="loadSingleMail(mail.id)" class="media">
                                <span class="pull-left media-icon">
                                    <span class="square-icon sm bg-primary"><i class="fa fa-envelope-o"></i></span>
                                </span>
                                <div class="media-body">
                                    <span class="block" ng-bind-html="mail.subject"></span>
                                    <span class="text-muted block">{{mail.date_time | date: "dd/MM/yyyy&nbsp;HH:mm:ss"}}</span>
                                </div>
                            </a>
                        </li>                      
                    </ul>
                    <div class="panel-footer">
                        <a href="#/app/header/mail/mail" data-i18n="id00162_app:header:mails:show-all">Mostrar todos los emails.</a>
                    </div>
                </div>
            </li>
        </ul>
    </div>

</header>

{% endverbatim %}