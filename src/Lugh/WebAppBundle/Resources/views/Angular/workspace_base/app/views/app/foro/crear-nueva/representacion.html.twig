{% verbatim %}
<div class="page" ng-controller="newRepresentationCtrl">
	<section class="panel panel-default">
		<div class="panel-heading"><strong><span class="glyphicon glyphicon-th"></span> <span i18n="id00124_app:foro:item:new-offer-request">Crear representación</span></strong></div>
		<div class="panel-body">

			<form class="form-horizontal" role="form">

				<fieldset>
					<legend><span>Tipo de representación</span></legend>
					<div class="form-group">
						<div class="col-sm-5 col-sm-offset-3">
							<table>
								<tr ng-if="postableoffers">
									<td><label class="ui-radio"><input name="radio1" type="radio" value="offers"   ng-model="item.type"><span>Oferta de representación</span></label></td>
									<td><!--<info-modal title='id00285_app:foro:info:modal:title' tag='id00286_app:foro:offer:info:modal:body' />--></td>
								<tr>
								<tr ng-if="postablerequests">
									<td><label class="ui-radio"><input name="radio1" type="radio" value="requests" ng-model="item.type"><span>Petición de representación</span></label></td>
									<td><!--<info-modal title='id00285_app:foro:info:modal:title' tag='id00287_app:foro:request:info:modal:body' />--></td>
								<tr>
							</table>
						</div>


					</div>

				</fieldset>

				<fieldset>
					<legend><span i18n="id00124_app:foro:item:new-offer-request">Crear oferta</span></legend>

					<div class="form-group">
						<label for="title" class="col-sm-3 control-label" i18n="id00103_app:foro:item:title">Título</label>
						<div class="col-sm-5">
							<input type="text" class="form-control" id="title" placeholder="Título" entities-decode ng-model="item.title">
						</div>
					</div>
					<div class="form-group">
						<label for="body" class="col-sm-3 control-label" i18n="id00104_app:foro:item:body">Cuerpo</label>
						<div class="col-sm-5">
							<textarea name="" id="body" class="form-control" rows="4" entities-decode ng-model="item.description"></textarea>
						</div>
					</div>
				</fieldset>

				<fieldset>
					<legend i18n="id00108_app:foro:comment-for-admin">Comentarios para el moderador</legend>
					<div class="form-group">
						<label for="comments" class="col-sm-3 control-label" i18n="id00106_app:foro:comments">Comentarios</label>
						<div class="col-sm-5">
							<textarea name="" id="comments" class="form-control" rows="4" entities-decode ng-model="item.message"></textarea>
						</div>
					</div>
				</fieldset>

				<fieldset>
					<legend i18n="id00127_app:privacy-policy">Política de privacidad</legend>

					<div class="form-group">
						<div class="col-sm-3">

						</div>
						<div class="col-sm-9">
							<label class="ui-checkbox"><input name="checkbox1" type="checkbox" value="option1" ng-model="acceptTerms"><span i18n="id00392_app:foro:item:privacy-terms-offer-request">Acepto que mis datos de contacto sean enviados a los accionistas que se adhieran a mi propuesta.</span></label>
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-offset-3 col-sm-9">
							<button type="submit" class="btn btn-success" ng-disabled="!allowItem() || !acceptTerms || loading" ng-click="submit()">Guardar</button> 
							<button type="submit" class="btn btn-warning" i18n="id00129_app:foro:item:clean-data" ng-click="clear()">Limpiar datos</button>
						</div>
					</div>
				</fieldset>

			</form> 

		</div>
	</section>

</div>


{% endverbatim %}