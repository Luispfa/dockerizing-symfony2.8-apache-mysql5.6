{% verbatim %}
<div class="page" ng-controller="newProposalCtrl">

	<section class="panel panel-default">
		<div class="panel-heading"><strong><span class="glyphicon glyphicon-th"></span> <span i18n="id00126_app:foro:item:new-proposal">Crear propuesta</span></strong></div>
		<div class="panel-body">

			<form class="form-horizontal" role="form">

				<fieldset>
					<legend><span i18n="id00126_app:foro:item:new-proposal">Nueva propuesta</span></legend>

					<div class="form-group">
						<label for="title" class="col-sm-3 control-label" i18n="id00103_app:foro:item:title">Título</label>
						<div class="col-sm-5">
							<input type="text" class="form-control" id="title" placeholder="id00103_app:foro:item:title" i18n="i18n-placeholder" entities-decode ng-model="item.title">
						</div>
					</div>
					<div class="form-group">
						<label for="justification" class="col-sm-3 control-label" i18n="id00117_app:foro:item:justification">Justificación</label>
						<div class="col-sm-5">
							<input type="text" class="form-control" id="justification" placeholder="id00117_app:foro:item:justification" i18n="i18n-placeholder" entities-decode ng-model="item.justification">
						</div>
					</div>
					<div class="form-group">
						<label for="body" class="col-sm-3 control-label" i18n="id00104_app:foro:item:body">Cuerpo</label>
						<div class="col-sm-5">
							<textarea name="" id="body" class="form-control" rows="4" entities-decode ng-model="item.description"></textarea>
						</div>
					</div>
				</fieldset>

				<fieldset>
					<legend i18n="id00108_app:foro:comment-for-admin">Comentarios para el moderador</legend>
					<div class="form-group">
						<label for="comments" class="col-sm-3 control-label" i18n="id00106_app:foro:comments">Comentarios</label>
						<div class="col-sm-5">
							<textarea name="" id="comments" class="form-control" rows="4" entities-decode ng-model="item.message"></textarea>
						</div>
					</div>
				</fieldset>

				<fieldset>
					<legend i18n="id00127_app:privacy-policy">Política de privacidad</legend>

					<div class="form-group">
						<div class="col-sm-3">

						</div>
						<div class="col-sm-9">
							<label class="ui-checkbox"><input name="checkbox1" type="checkbox" value="option1" ng-model="acceptTerms"><span i18n="id00128_app:foro:item:privacy-terms-proposal">Acepto que mis datos de contacto sean enviados a los accionistas que se adhieran a mi propuesta.</span></label>
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-offset-3 col-sm-9">
							<button type="submit" class="btn btn-success" ng-disabled="!allowItem() || !acceptTerms || loading" ng-click="submit()"><span i18n="id00364_app:new:item:button:save">Guardar</span></button> 
							<button type="submit" class="btn btn-warning" i18n="id00129_app:foro:item:clean-data" ng-click="clear()"><span i18n="id00365_app:new:item:button:clear">Limpiar datos</span></button>
						</div>
					</div>
				</fieldset>

			</form> 

		</div>
	</section>

</div>


{% endverbatim %}