{% verbatim %}

    <section class="panel panel-default mail-container mail-compose" data-ng-controller="MailComposeCtrl">
        <div class="panel-heading"><strong><span class="glyphicon glyphicon-th"></span> <span i18n="id00169_app:mail:admin-contact">Contactar con el administrador</span></strong></div>
        <div class="panel-body">
            <form class="form-horizontal">
                <div class="form-group">
                    <div class="input-group input-group-lg col-sm-12">
                        <input type="text"
                               class="form-control"
                               placeholder="id00066_app:contact:subject"
                               ng-model="mail.subject"
                               data-i18n="i18n-placeholder"
                               >
                    </div>
                </div>
                <!--div text-angular ng-model="mail.body" class="ui-editor"></div-->
                <textarea text-angular ng-model="mail.body" class="form-control" rows="14"></textarea>
            </form>
            <div class="mail-actions">
                <div class="btn btn-sm btn-primary" ng-click="sendMailContacto()" ng-disabled="!valid()" i18n="id00170_app:mail:send">Enviar</div>
                <div class="btn btn-sm btn-default" ng-click="borra()" i18n="id00171_app:mail:draft">Borrador</div>
                <div class="btn btn-sm btn-default" i18n="id00172_app:mail:discard">Descartar</div>
            </div>
        </div>
    </section>

{% endverbatim %}