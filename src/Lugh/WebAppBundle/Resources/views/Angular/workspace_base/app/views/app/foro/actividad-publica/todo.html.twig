{% verbatim %}
<div class="page" ng-controller="foroPublicAll">

	<section class="panel panel-default">
		<div class="panel-heading"><strong class="strong-heading"><span class="glyphicon glyphicon-th"></span> <span i18n="id00080_app:foro:nav:all">Todo</span></strong>
			<span class="ui-select">
				<select ng-model="filterType"
						ng-options="type as i18n(label) for (type,label) in types">
				</select>
			</span>
		</div>
		<div class="panel-body">

			<div class="table-responsive table-bordered">
				<table class="table table-striped table-bordered">
					<thead>
						<tr>
							<th class="col-sm-2" i18n="id00094_app:foro:long:type">Tipo proceso</th>
							<th class="col-sm-8" i18n="id00090_app:foro:description">Descripci√≥n proceso</th>
							<th class="col-sm-2" i18n="id00091_app:foro:date">Fecha</th>
						</tr>
					</thead>
					<tbody>
						<tr ng-if="items.emptyForo() || (filterType != 'todo' && items[filterType].length === 0)">
							<td></td>
							<td><a i18n="id00092_app:no-data">No hay datos disponibles.</a></td>
							<td></td>
						</tr>
						<tr ng-repeat="item in items.proposals" ng-show="filterType == 'todo' || filterType =='proposals'">
							<td i18n="id00099_app:foro:singular:short:proposal">proposals</td>
							<td><h4>{{item.autor.name}} - <a ng-click="loadItem(item)" ng-bind-html="item.title"></a></h4>
								<p ng-bind-html="item.description | nl2br"></p>
							</td>
							<td>{{item.date_time | date: 'dd/MM/yyyy&nbsp;HH:mm'}}</td>
						</tr>
						<tr ng-repeat="item in items.initiatives" ng-show="filterType == 'todo' || filterType =='initiatives'">
							<td i18n="id00100_app:foro:singular:short:initiative">initiatives</td>
							<td><h4>{{item.autor.name}} - <a ng-click="loadItem(item)" ng-bind-html="item.title"></a></h4>
								<p ng-bind-html="item.description | nl2br"></p>
							</td>
							<td>{{item.date_time | date: 'dd/MM/yyyy&nbsp;HH:mm'}}</td>
						</tr>
						<tr ng-repeat="item in items.offers" ng-show="filterType == 'todo' || filterType =='offers'">
							<td i18n="id00101_app:foro:singular:short:offer">offers</td>
							<td><h4>{{item.autor.name}} - <a ng-click="loadItem(item)" ng-bind-html="item.title"></a></h4>
								<p ng-bind-html="item.description | nl2br"></p>
							</td>
							<td>{{item.date_time | date: 'dd/MM/yyyy&nbsp;HH:mm'}}</td>
						</tr>
						<tr ng-repeat="item in items.requests" ng-show="filterType == 'todo' || filterType =='requests'">
							<td i18n="id00102_app:foro:singular:short:request">requests</td>
							<td><h4>{{item.autor.name}} - <a ng-click="loadItem(item)" ng-bind-html="item.title"></a></h4>
								<p ng-bind-html="item.description | nl2br"></p>
							</td>
							<td>{{item.date_time | date: 'dd/MM/yyyy&nbsp;HH:mm'}}</td>
						</tr>
					</tbody>
				</table> 
			</div>

		</div>
	</section>

</div>
{% endverbatim %}